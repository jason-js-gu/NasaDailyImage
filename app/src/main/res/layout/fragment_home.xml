<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="Choose a date, \nI\'ll give you a universe."
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvchoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="0dp"
        android:padding="16dp"
        android:gravity="center"
        android:hint="Click Me to Choose"
        android:textColor="#8ef63d"
        android:textColorHint="#8ef63d"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvchoose"
        android:layout_marginTop="66dp"
        android:padding="16dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="" />

    <TextView
        android:id="@+id/tvUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvDate"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvUrl"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:text="" />

    <TextView
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/tvLink"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text="" />
    </RelativeLayout>

</FrameLayout>